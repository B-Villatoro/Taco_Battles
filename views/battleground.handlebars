<br><br><br>


<!-- Main Area with the battleling tacos and stats -->
<div id="battle_ground">
    <div class="container">
        <div class="row">
            <div class="col-sm-5">
                <h3 id="contender-1">Contender 1 Name</h3>
                <ul id="contender-list-1" class="list-group">

                    <select>
                        {{#each users}}
                        {{>user/select-user}}
                        {{/each}}
                    </select>
                    <select>
                        {{#each theseTacos}}
                        {{>taco/select-taco}}
                        {{/each}}
                    </select>

                    {{#with myTaco}}
                    {{>taco/taco-block}}
                    {{/with}}
                </ul>
            </div>
            <div class="col-sm-2">
                <h3 id="versus">VS</h3>
            </div>
            <div class="col-sm-5">
                <h3 id="contender-2">Contender 2 Name</h3>
                <ul id="contender-list-2" class="list-group">

                    <select id="user">
                        {{#each users}}
                        {{>user/select-user}}
                        {{/each}}
                    </select>

                    <select id="taco">
                        {{#each theseTacos}}
                        {{>taco/select-taco}}
                        {{/each}}
                    </select>

                    {{#with enemy}}
                    {{>taco/taco-block}}
                    {{/with}}
                </ul>
            </div>
        </div>
    </div>
</div>